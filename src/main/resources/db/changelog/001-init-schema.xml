<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
           http://www.liquibase.org/xml/ns/dbchangelog
           https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="001-create-sequences" author="pashko">
        <createSequence sequenceName="category_seq" incrementBy="1" startValue="1"/>
        <createSequence sequenceName="product_seq" incrementBy="1" startValue="1"/>
        <createSequence sequenceName="customer_seq" incrementBy="1" startValue="1"/>
        <createSequence sequenceName="orders_seq" incrementBy="1" startValue="1"/>
        <createSequence sequenceName="order_line_seq" incrementBy="1" startValue="1"/>
    </changeSet>

    <changeSet id="002-create-category-table" author="pashko">
        <createTable tableName="categories">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(1000)"/>
        </createTable>
    </changeSet>

    <changeSet id="003-create-product-table" author="pashko">
        <createTable tableName="products">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="product_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(1000)"/>
            <column name="price" type="numeric(19,2)">
                <constraints nullable="false"/>
            </column>
            <column name="category_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_products_category"
                             referencedTableName="categories" referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="004-create-customer-table" author="pashko">
        <createTable tableName="customers">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="email" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="full_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="005-create-orders-table" author="pashko">
        <createTable tableName="orders">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="order_number" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
            <column name="customer_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_orders_customer"
                             referencedTableName="customers" referencedColumnNames="id"/>
            </column>
            <column name="status" type="varchar(32)"/>
            <column name="created_at" type="timestamp"/>
        </createTable>
    </changeSet>

    <changeSet id="006-create-order-lines-table" author="pashko">
        <createTable tableName="order_lines">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="order_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_lines_order"
                             referencedTableName="orders" referencedColumnNames="id"/>
            </column>
            <column name="product_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_lines_product"
                             referencedTableName="products" referencedColumnNames="id"/>
            </column>
            <column name="quantity" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="price_at_purchase" type="numeric(19,2)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
